{
  "expo": {
    "name": "SignalDesk AI",
    "slug": "signaldesk-ai",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "scheme": "signaldesk",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#0A0A0F"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.signaldesk.ai",
      "infoPlist": {
        "NSFaceIDUsageDescription": "Use Face ID for secure login"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0A0A0F"
      },
      "package": "com.signaldesk.ai"
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-secure-store",
      "expo-asset",
      "expo-font"
    ],
    "extra": {
      "revenueCatApiKey": "mock_revenuecat_key_for_testing"
    }
  }
}
